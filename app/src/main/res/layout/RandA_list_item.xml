<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_tv_type"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:textColor="@color/button_normal" />

    <TextView
        android:id="@+id/item_tv_time"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/button_press"
        android:textSize="10dp"
        android:layout_below="@+id/item_tv_type"
        android:layout_alignLeft="@+id/item_tv_type"
        android:layout_alignStart="@+id/item_tv_type" />

    <ImageView
        android:id="@+id/item_img_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/caijing"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/item_tv_title"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textSize="20dp"
        android:layout_below="@+id/item_img_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <myandroid.jike.view.MyImageView
        android:id="@+id/item_img_pic1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/item_tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <myandroid.jike.view.MyImageView
        android:id="@+id/item_img_pic3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/item_img_pic2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <myandroid.jike.view.MyImageView
        android:id="@+id/item_img_pic2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/item_img_pic1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
