<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myandroid.jike">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.SplashActivity"
                   android:clearTaskOnLaunch="true"
                   android:finishOnTaskLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                         android:clearTaskOnLaunch="true" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.WelcomeActivity"/>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.ShowAttentionListActivity"/>
        <activity android:name=".activity.NewsDetailActivity"/>
        <activity android:name=".activity.SetLockActivity"/>
        <activity android:name=".activity.UnlockActivity"/>
        <activity android:name=".activity.FaceResultActivity"/>

    </application>

</manifest>